<Page x:Class="WpfGUI.Views.Instructions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Instructions">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="instructionText" Foreground="White"></TextBlock>
            <Image x:Name="instructionImage" Loaded="Image_Loaded" Height="150" Width="150" Stretch="Fill"></Image>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="25" Click="Previous" Margin="0,5,5,0">&#5130;</Button>
                <Button Width="25" Click="Next" Margin="5,5,0,0">&#5125;</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
